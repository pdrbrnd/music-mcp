{
  "name": "@pdrbrnd/music-mcp",
  "version": "1.2.0",
  "description": "MCP server for controlling Apple Music on macOS with full catalog search support",
  "main": "dist/index.js",
  "bin": {
    "music-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "manifest.json"
  ],
  "scripts": {
    "build": "tsc && pnpm run postbuild",
    "postbuild": "chmod +x dist/index.js && cp -r src/scripts dist/",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "lint": "eslint src --ext .ts",
    "prepare-release": "node scripts/prepare-release.js",
    "inspector": "pnpm exec @modelcontextprotocol/inspector node dist/index.js",
    "package:mcpb": "pnpm exec mcpb pack"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "music",
    "apple-music",
    "macos",
    "automation",
    "applescript"
  ],
  "author": "Pedro Brand√£o <pedro@significa.co>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdrbrnd/music-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/pdrbrnd/music-mcp/issues"
  },
  "homepage": "https://github.com/pdrbrnd/music-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "applescript": "^1.0.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.15.3"
}
